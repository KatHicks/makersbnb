<div class="container">
  <div class="jumbotron spaces-jt">
    <h2 id="list-space">Want to list a space?</h2>
    <a href="/spaces/new" class="btn btn-default btn-spaces">Yes, please</a>
      <!-- <img id="logo-btn" src="/images/ok.ico"</a> -->
  </div>



  <div class='container-fluid highlights'>
    <h3 class='subtitle'> Spaces </h3>
    <div class='row'>
      <ul class="list-unstyled spaces">
        <% @spaces.each do |space| %>
        <div class="col-md-3 col-xs-6">
          <li>
            <div id="space">
              <img src="/uploads/<%= space.image %>">
              <p class='header'><b><%= space.name %></b></p>
              <p class='content'><%= space.description %></p>
              <p class='price'>Â£<%= space.price %> per night</p>
              <a href="/spaces/<%= space.id %>"><button>Details</button></a>
            </div>
          </li>
        </div>
        <% end %>
      </ul>
    </div>
  </div>
</div>
